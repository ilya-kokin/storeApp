<!DOCTYPE html>
<html ng-cloak ng-app="storeApp">
	<head>
		<base href="/">
		<meta charset="UTF-8">
		<title ng-bind="$root.pageTitle"></title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>

	<body>
		<div ng-controller="NavbarCtrl" class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">Store</a>
				</div>
				<ul class="nav navbar-nav">
					<li ng-class="{ 'active' : checkState('catalog') }">
						<a href="/">Catalog</a>
					<li>
					<li ng-class="{ 'active' : checkState('orders') }">
						<a href="/orders">Orders</a>
					<li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li ng-class="{ 'active' : checkState('cart') }">
						<a href="/cart">Cart <span ng-if="cartCounter" class="label label-danger">{{ cartCounter }}</span></a>
					</li>
				</ul>
			</div>
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-12" ng-view></div>
			</div>
		</div>
	</body>
</html>
